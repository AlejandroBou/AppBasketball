<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
        Layout raíz: ConstraintLayout con estilo oscuro.
        Actúa como contenedor general de toda la pantalla del marcador.
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A2E"
        android:padding="16dp">

        <!--
            Encabezado estilo "NBA".
            Muestra el título de la app en un rectángulo lleno.
        -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BASKETBALL"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#0F3460"
            android:paddingVertical="16dp"
            android:letterSpacing="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--
            Tarjeta principal del marcador.
            Contiene nombres de equipos, puntuaciones y divisor central.
        -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardScoreboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#16213E"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Etiqueta "Local" -->
                <TextView
                    android:id="@+id/tvEquipoLocal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/team_local"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#4ECCA3"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dividerVertical"/>

                <!-- Marcador del equipo Local -->
                <TextView
                    android:id="@+id/tvScoreLocal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_initial"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:textColor="#4ECCA3"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    app:layout_constraintTop_toBottomOf="@id/tvEquipoLocal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dividerVertical"
                    android:layout_marginTop="8dp"/>

                <!--
                    Divisor vertical entre marcadores.
                    Se centra automáticamente al usar constraints simétricas.
                -->
                <View
                    android:id="@+id/dividerVertical"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="#0F3460"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Etiqueta "Visitante" -->
                <TextView
                    android:id="@+id/tvEquipoVisitante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/team_visitante"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#E94560"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dividerVertical"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Marcador del Visitante -->
                <TextView
                    android:id="@+id/tvScoreVisitante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_initial"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:textColor="#E94560"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    app:layout_constraintTop_toBottomOf="@id/tvEquipoVisitante"
                    app:layout_constraintStart_toEndOf="@id/dividerVertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!--
            Sección de controles del equipo Local.
            Actúa como subtítulo para los botones correspondientes.
        -->
        <TextView
            android:id="@+id/tvControlsLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Controles Local"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4ECCA3"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cardScoreboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

        <!-- Botón +1 Local -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLocalMasUno"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="+1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#4ECCA3"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvControlsLocal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnLocalMasDos"/>

        <!-- Botón +2 Local -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLocalMasDos"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="+2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#4ECCA3"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvControlsLocal"
            app:layout_constraintStart_toEndOf="@id/btnLocalMasUno"
            app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

        <!-- Botón -1 Local -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLocalMenosUno"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="-1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#2D4356"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnLocalMasUno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

        <!--
            Guideline vertical al 50% para partir la pantalla en dos zonas simétricas.
        -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <!-- Título controles visitante -->
        <TextView
            android:id="@+id/tvControlsVisitante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Controles Visitante"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#E94560"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cardScoreboard"
            app:layout_constraintStart_toEndOf="@id/guidelineCenter"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botón +1 Visitante -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVisitanteMasUno"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="+1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#E94560"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvControlsVisitante"
            app:layout_constraintStart_toEndOf="@id/guidelineCenter"
            app:layout_constraintEnd_toStartOf="@id/btnVisitanteMasDos"/>

        <!-- Botón +2 Visitante -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVisitanteMasDos"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="+2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#E94560"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvControlsVisitante"
            app:layout_constraintStart_toEndOf="@id/btnVisitanteMasUno"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botón -1 Visitante -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVisitanteMenosUno"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="-1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#2D4356"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnVisitanteMasUno"
            app:layout_constraintStart_toEndOf="@id/guidelineCenter"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--
            Card inferior con botones destacados:
            - Reset
            - Terminar / Resultados
        -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0F3460"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <!-- Contenedor horizontal de los botones principales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <!--
                    Botón RESET dentro de contenedor clicable.
                -->
                <LinearLayout
                    android:id="@+id/btnResetContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnReset"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/ic_menu_rotate"
                        android:background="@drawable/button_control_bg"
                        android:contentDescription="@string/btn_reset_description"
                        app:tint="#FF9800"
                        android:scaleType="centerInside"
                        android:padding="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REINICIAR"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:letterSpacing="0.1"/>
                </LinearLayout>

                <!-- Separador visual -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1A1A2E"
                    android:layout_marginHorizontal="8dp"/>

                <!--
                    Botón RESULTADOS dentro de contenedor clicable.
                -->
                <LinearLayout
                    android:id="@+id/btnResultsContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnResults"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:background="@drawable/button_control_bg"
                        android:contentDescription="@string/btn_results_description"
                        app:tint="#4CAF50"
                        android:scaleType="centerInside"
                        android:padding="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TERMINAR"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:letterSpacing="0.1"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
